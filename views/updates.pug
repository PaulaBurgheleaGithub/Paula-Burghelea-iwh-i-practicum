doctype html
html(lang="en")
    head
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        .form-wrapper
            p User: #{userEmail}
            p Favorite Book: #{favoriteBook}
            form(method="POST")
                label(for="newVal") New favorite book
                input(type="text" name="newVal" required)
                input(type="submit" value="Submit")
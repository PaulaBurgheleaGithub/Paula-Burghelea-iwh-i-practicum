doctype html
html 
    head 
        title=`${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        nav
            div
                h1 HubSpot I: Foundations Final Project

            input(
                type='text'
                name='search'
                placeholder='type project name...'
            ) 
            ul
                li
                    a(href='/') Home
                li
                    a(href='/update') Update
        table
            tr.card
                th NAME
                th TYPE
                th STACK
                th DESCRIPTION
            each entry in data
                - let id = `${entry.id}`;
                    tr
                        th
                            a(href=`/update-cobj?id=${id}`)
                                p #{entry.properties.name}
                        th
                            a(href=`/update-cobj?id=${id}`)
                                p #{entry.properties.type}
                        th
                            a(href=`/update-cobj?id=${id}`)
                                p #{entry.properties.stack}
                        th
                            a(href=`/update-cobj?id=${id}`)
                                p #{entry.properties.description}
